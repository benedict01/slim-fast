<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <meta name="author" content="{% block meta_author %}Author Name{% endblock %}">
        <meta name="description" content="{% block meta_description %}Page Description{% endblock %}">
        <meta name="keywords" content="{% block meta_keywords %}page, keywords{% endblock %}">
        <link rel="shortcut icon" href="favicon.ico">
        <title>{% block title %}{{name}}{% endblock %}</title>

        {% block stylesheets %}
          <link rel="stylesheet" href="css/app.css" />
        {% endblock %}

      	{% block headjavascript %}
            <!-- Included JS Files (More at the bottom) -->
            <script src="/js/vendor/modernizr.js"></script>
            <script src="/js/vendor/jquery.min.js"></script>
        {% endblock %}
    </head>

    <body>

        {% block navigation %}
        <div class="fixed">
            <nav class="top-bar" data-topbar>
                <ul class="title-area">
                    <li class="name"><h1><a href="/">{{name}}</a></h1></li>

                    <li class="toggle-topbar menu-icon"><a href="#"><span>Menu</span></a></li>
                </ul>
                <section class="top-bar-section">
                    <!-- Right Nav Section -->
                    <ul class="right">
                      <li class="active"><a href="#">Right Button Active</a></li>
                      <li class="has-dropdown">
                        <a href="#">Right Button Dropdown</a>
                        <ul class="dropdown">
                          <li><a href="#">First link in dropdown</a></li>
                        </ul>
                      </li>
                    </ul>

                    <!-- Left Nav Section -->
                    <ul class="left">
                      <li><a href="#">Left Nav Button</a></li>
                    </ul>
                </section>
            </nav>
        </div>
        {% endblock %}


        {% block main_section %}
            {% block main_content %}
              <p>Hello World!</p>
            {% endblock %}
        {% endblock %}

        {% block footer %}
        <footer class="footer-wrapper">
            <div class="row">
                <div class="large-12 columns">
                    <hr/>
                    &copy; {{legalName}} {{ "now"|date('Y') }}
                </div>
            </div>
        </footer>
        {% endblock %}

        {% block footerjavascript %}
        <script src="js/vendor/foundation.min.js"></script>
        <script src="js/app.js"></script>

        <!-- Google Analytics -->
        <script>
            (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
            (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
            m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
            })(window,document,'script','//www.google-analytics.com/analytics.js','ga');

            ga('create', '', '');
            ga('send', 'pageview');
        </script>
        {% endblock %}
    </body>
</html>
